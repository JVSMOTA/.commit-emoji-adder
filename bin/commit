#!/usr/bin/env bash

echo -e "| Type     | Emoji | Description                                                      |"
echo -e "|----------|-------|------------------------------------------------------------------|"
echo -e "| feat     |  ✨   | New feature                                                      |"
echo -e "| fix      |  🐛   | Bug fix                                                          |"
echo -e "| chore    |  🔧   | Maintenance changes or tasks unrelated to code (build, CI, etc.) |"
echo -e "| docs     |  📝   | Documentation changes                                            |"
echo -e "| style    |  💄   | Code style and formatting changes (spaces, commas, etc.)         |"
echo -e "| refactor |  ♻️   | Code refactoring without changing functionality                  |"
echo -e "| test     |  ✅   | Addition or modification of tests                                |"
echo -e "| perf     |  🚀   | Performance improvements                                         |"
echo -e "| ci       |  👷   | Changes to CI configuration                                      |"
echo -e "| build    |  🏗️   | Changes that affect the build system or external dependencies    |"
echo -e "| revert   |  ⏪   | Revert a previous commit                                         |"
echo -e "| init     |  🎉   | Initial project commit                                           |"
