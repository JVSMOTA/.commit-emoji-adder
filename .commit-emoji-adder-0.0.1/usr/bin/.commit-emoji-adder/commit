#!/usr/bin/env bash

echo -e "| Tipo     | Emoji | Descrição                                                                      |"
echo -e "|----------|-------|--------------------------------------------------------------------------------|"
echo -e "| feat     | ✨    | Nova funcionalidade                                                            |"
echo -e "| fix      | 🐛    | Correção de bug                                                                |"
echo -e "| chore    | 🔧    | Mudanças de manutenção ou tarefas não relacionadas ao código (build, CI, etc.) |"
echo -e "| docs     | 📝    | Alterações na documentação                                                     |"
echo -e "| style    | 💄    | Mudanças de estilo e formatação do código (espaços, vírgulas, etc.)            |"
echo -e "| refactor | ♻️    | Refatoração de código sem alterar a funcionalidade                             |"
echo -e "| test     | ✅    | Adição ou modificação de testes                                                |"
echo -e "| perf     | 🚀    | Melhorias de desempenho                                                        |"
echo -e "| ci       | 👷    | Alterações em configuração de CI                                               |"
echo -e "| build    | 🏗️    | Mudanças que afetam o sistema de build ou dependências externas                |"
echo -e "| revert   | ⏪    | Reverter um commit anterior                                                    |"
echo -e "| init     | 🎉    | Commit inicial do projeto                                                      |"
